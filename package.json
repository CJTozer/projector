{
  "name": "projector",
  "version": "0.0.2",
  "description": "Simple charts using Google Gantt",
  "main": "index.js",
  "scripts": {
    "clean": "node bin/clean",
    "watch-css": "npm run clean && stylus source/stylesheets/index.styl -o static/css -w",
    "lint": "eslint . --fix",
    "watch-lint": "nodemon -e js --exec npm run lint",
    "dev-server": "nodemon server -e js,jade",
    "start": "node server"
  },
  "bin": {
    "pj": "cli.js"
  },
  "author": "C J Tozer",
  "license": "MIT",
  "dependencies": {
    "duration-js": "^3.9.2",
    "express": "^4.14.0",
    "fs-extra": "^2.0.0",
    "jade": "^1.11.0",
    "jshint-stylish": "^2.2.1",
    "merge-config": "^2.0.0",
    "morgan": "^1.7.0",
    "nodemon": "^1.11.0",
    "stylus": "^0.54.5",
    "yargs": "^6.6.0"
  },
  "repository": "CJTozer/projector",
  "devDependencies": {
    "eslint": "^3.13.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-config-idiomatic": "^3.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
  }
}
